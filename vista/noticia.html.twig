{% extends "basePrivada.html.twig" %}
 {% block head %}
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="shortcut icon" href="favicon.ico" />
        <link href="../css/bootstrap.css" rel="stylesheet" media="screen">
        <link href="../css/admin.css" rel="stylesheet" media="screen">
        <script src="http://code.jquery.com/jquery.js"></script>
        <script src="../js/bootstrap.min.js"></script>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
        <script src="../plugins/ckeditor/ckeditor.js"></script>
        <script src="../plugins/ckeditor/adapters/jquery.js"></script>
        <script type="text/javascript">$( document ).ready( function() {
          $( 'textarea#editor1' ).ckeditor();} );
        </script>   
        
          
 {% endblock %}
 {% block title %}Cargar Noticia{% endblock %}

  {% block conteiner %}
    <div class="col-6  " style="">
      <div style="margin:0 auto 0 auto; ">
       <div class="panel-heading" > 
            <h3>Mis Noticias</h3>
       </div >
       <div class="panel-body">
          <form role="form" id="feedbackForm">
            <span class="help-block">Titulo:</span>
                <div class="form-group">
                  <input type="text" class="form-control" id="name" name="name" placeholder="Titulo">             
                </div>
                <div class="form-group">
                  <span class="help-block">Nota:</span>
                  <input type="email" class="form-control" id="email" name="email" placeholder="Pie de nota">    
                </div>
                <div class="form-group">
                  <span class="help-block">Noticia:</span>
                  <textarea class="ckeditor" name="editor1"></textarea>
                </div>
                <div class="form-group">
                  <span class="help-block">Aviso:</span>
                  <textarea class="ckeditor" name="editao2"></textarea>
                </div>
          </form>
        </div>
      </div>
    </div>
         
  {% endblock %}
